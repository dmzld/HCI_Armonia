<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ClubHomeFrag">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/clubImage"
        android:layout_width="329dp"
        android:layout_height="176dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="23dp"
        android:src="@mipmap/ic_launcher_round" />

    <Button
        android:id="@+id/btnClubApply"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/clubCategory"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/buttonshape"
        android:text="신청" />

    <TextView
        android:id="@+id/clubCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/clubImage"
        android:layout_below="@+id/clubName"
        android:text="동아리카테고리" />

    <TextView
        android:id="@+id/clubName"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/clubImage"
        android:layout_below="@+id/clubImage"
        android:text="동아리이름"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/clubInfo"
        android:layout_width="328dp"
        android:layout_height="274dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:text="안녕하세요 저희는 ~ 동아리입니다. 어쩌구 저쩌구" />

</RelativeLayout>