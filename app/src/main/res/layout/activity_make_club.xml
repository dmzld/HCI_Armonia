<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.MakeClubActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="동아리명"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/club_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:hint="동아리명"
        android:inputType="text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/buttonshape"
        android:text="분류"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_marginTop="55dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="110dp">
        <Spinner
            android:id="@+id/category"
            android:layout_width="200dp"
            android:layout_height="40dp">
        </Spinner>
    </LinearLayout>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/buttonshape"
        android:text="회장 이름"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/president_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="110dp"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="170dp"
        android:text="본인 제외, 4명 이상 이름을 써주세요"
        android:textColorHint="#dddddd"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginTop="205dp"
        android:background="@drawable/buttonshape"
        android:text="동아리원1"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/member_name1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="195dp"
        android:layout_marginLeft="110dp"
        android:inputType="text" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginTop="245dp"
        android:background="@drawable/buttonshape"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:text="동아리원2" />

    <EditText
        android:id="@+id/member_name2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="110dp"
        android:inputType="text" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginTop="285dp"
        android:background="@drawable/buttonshape"
        android:textAlignment="center"
        android:text="동아리원3" />

    <EditText
        android:id="@+id/member_name3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="275dp"
        android:layout_marginLeft="110dp"
        android:inputType="text" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginTop="320dp"
        android:background="@drawable/buttonshape"
        android:text="동아리원4"
        android:textAlignment="center" />

    <EditText

        android:id="@+id/member_name4"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="315dp"
        android:layout_marginLeft="110dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/club_content"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:background="@drawable/edge"
        android:hint="동아리에 대한 간단한 설명을 써주세요"
        android:inputType="textMultiLine"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_make_club"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn_cancel"
        android:layout_marginStart="89dp"
        android:background="@drawable/buttonshape"
        android:text="개설 신청" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/buttonshape"
        android:text="취소" />

    <!--<Button-->
        <!--android:id="@+id/btn_add_more"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="250dp"-->
        <!--android:layout_marginTop="450dp"-->
        <!--android:background="@drawable/buttonshape"-->
        <!--android:text="동아리원 추가" />-->
</RelativeLayout>