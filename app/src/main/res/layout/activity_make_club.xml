<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MakeClubActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="동아리명" />

    <EditText
        android:id="@+id/club_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:hint="동아리명"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:text="분류" />

    <LinearLayout
        android:layout_marginTop="55dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="110dp">
        <Spinner
            android:id="@+id/category"
            android:layout_width="200dp"
            android:layout_height="40dp">
        </Spinner>
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:text="회장 이름" />

    <EditText
        android:id="@+id/president_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="110dp"
        android:inputType="text" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="170dp"
        android:text="회장 학번" />

    <EditText
        android:id="@+id/president_id_num"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="110dp"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="280dp"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="240dp"
        android:text="-동아리원(본인 제외, 4명 이상 이름을 쓰세요)-" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="280dp"
        android:text="동아리원 1" />

    <EditText
        android:id="@+id/member_name1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="275dp"
        android:layout_marginLeft="110dp"
        android:inputType="text" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="320dp"
        android:text="동아리원 2" />

    <EditText
        android:id="@+id/member_name2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="315dp"
        android:layout_marginLeft="110dp"
        android:inputType="text" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="360dp"
        android:text="동아리원 3" />

    <EditText
        android:id="@+id/member_name3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="355dp"
        android:layout_marginLeft="110dp"
        android:inputType="text" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="400dp"
        android:text="동아리원 4" />

    <EditText

        android:id="@+id/member_name4"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="395dp"
        android:layout_marginLeft="110dp"
        android:inputType="text" />

    <Button
        android:id="@+id/btn_make_club"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/buttonshape"
        android:text="개설 신청" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/buttonshape"
        android:text="취소" />

    <!--<Button-->
        <!--android:id="@+id/btn_add_more"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="250dp"-->
        <!--android:layout_marginTop="450dp"-->
        <!--android:background="@drawable/buttonshape"-->
        <!--android:text="동아리원 추가" />-->
</RelativeLayout>