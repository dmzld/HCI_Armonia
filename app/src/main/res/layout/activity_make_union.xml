<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.MakeUnionActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="52dp"
        android:background="@drawable/buttonshape"
        android:text="연합이름"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/union_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignStart="@+id/textView3"
        android:inputType="text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/president_name"
        android:layout_marginLeft="30dp"
        android:background="@drawable/buttonshape"
        android:text="연합회장"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/president_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/union_name"
        android:layout_marginTop="97dp"
        android:hint="회장 이름"
        android:inputType="text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="소속 동아리"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_marginTop="190dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="90dp">
        <Spinner
            android:id="@+id/my_club"
            android:layout_width="200dp"
            android:layout_height="40dp">
        </Spinner>
    </LinearLayout>


    <EditText
        android:id="@+id/union_content"
        android:layout_width="350dp"
        android:layout_height="230dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp"
        android:background="@drawable/edge"
        android:hint="연합할 동아리들 이름과 연합에 대한 설명을 써주세요."
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:textAlignment="center"
        android:textColorHint="#dddddd" />

    <Button
        android:id="@+id/btn_make_union"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="82dp"
        android:background="@drawable/buttonshape"
        android:text="개설 신청" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_make_union"
        android:layout_marginEnd="82dp"
        android:background="@drawable/buttonshape"
        android:text="취소" />

</RelativeLayout>