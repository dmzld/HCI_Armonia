<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MakeUnionActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="연합명" />

    <EditText
        android:id="@+id/union_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="40dp"
        android:hint="연합 이름"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:text="연합 회장이름" />

    <EditText
        android:id="@+id/president_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="90dp"
        android:hint="회장 이름"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="160dp"
        android:text="소속 동아리" />

    <LinearLayout
        android:layout_marginTop="190dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="90dp">
        <Spinner
            android:id="@+id/my_club"
            android:layout_width="200dp"
            android:layout_height="40dp">
        </Spinner>
    </LinearLayout>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="250dp"
        android:text="연합 동아리 명" />

    <EditText
        android:id="@+id/union_content"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp"
        android:hint= "연합할 동아리를 쓰시오"
        android:textColorHint="#000000"
        android:inputType="textMultiLine"
        android:background="@drawable/edge" />

    <Button
        android:id="@+id/btn_make_union"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/buttonshape"
        android:text="개설 신청" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/buttonshape"
        android:text="취소" />

</RelativeLayout>