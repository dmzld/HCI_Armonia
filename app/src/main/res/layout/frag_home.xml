<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/subarmonia">

    <TextView
        android:id="@+id/textVIewclub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="114dp"
        android:text="  동아리게시판"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listHomeClubView"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textVIewclub"
        android:background="@drawable/listshape" />

    <TextView
        android:id="@+id/union_club_baord_textwiev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="320dp"
        android:text="  연합게시판"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listHomeFreeView"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/union_club_baord_textwiev"
        android:background="@drawable/listshape" />

    <Button
        android:id="@+id/btnMoreFree"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/listHomeFreeView"
        android:background="@drawable/buttonshape"
        android:text="더보기"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textCurUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="user"
        android:textSize="12sp" />


</RelativeLayout>
